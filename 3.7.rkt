(define (make-account balance password)
  (define (withdraw amount)
    (if (>= balance amount)
        (begin (set! balance (- balance amount))
               balance)
        "Insufficient funds"))
  (define (deposit amount)
    (set! balance (+ balance amount))
    balance)
  (define password-fault (lambda (x) "Incorrect password"))
  (define (joint new-pw)
    (dispatch))
  (define (dispatch pw m)
    (if (eq? pw password)
        (cond ((eq? m 'withdraw) withdraw)
              ((eq? m 'deposit) deposit)
              ((eq? m 'joint) joint)
              (else (error "Unknown requeset -- MAKE-ACCOUNT"
                           m)))
        password-fault))
  dispatch)

(define (make-joint account custom-pw new-pw)
  ((account custom-pw 'joint) new-pw))